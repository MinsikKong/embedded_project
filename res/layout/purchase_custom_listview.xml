<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/purchaseCustomListviewTextView1"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="일자" />

    <TextView
        android:id="@+id/purchaseCustomListviewTextView2"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/purchaseCustomListviewTextView1"
        android:text="업체명" />

    <TextView
        android:id="@+id/purchaseCustomListviewTextView3"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/purchaseCustomListviewTextView4"
        android:layout_toRightOf="@+id/purchaseCustomListviewTextView2"
        android:text="상품명" />

    <TextView
        android:id="@+id/purchaseCustomListviewTextView4"
        android:layout_width="80dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="총 가격" />

</RelativeLayout>