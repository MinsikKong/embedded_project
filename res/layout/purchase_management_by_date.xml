<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ListView
        android:id="@+id/PurchaseByDateList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PurchaseSummary"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/PurchaseSearchByDayButton1" >
    </ListView>

    <Button
        android:id="@+id/PurchaseSearchByDayButton1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="검색" />

    <TextView
        android:id="@+id/PurchaseSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="~일에서 ~일까지 매출 ~원 등 기타정보" />

    <TextView
        android:id="@+id/PurchaseByDateTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="일자"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/PurchaseByDateStartDateET"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/PurchaseByDateTextView1"
        android:editable="false"
        android:ems="10"
        android:hint="시작일"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/PurchaseByDateTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PurchaseSearchByDayButton1"
        android:layout_alignBottom="@+id/PurchaseSearchByDayButton1"
        android:layout_toRightOf="@+id/PurchaseByDateStartDateET"
        android:text="~" />

    <EditText
        android:id="@+id/PurchaseByDateEndDateET"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/PurchaseByDateTextView2"
        android:editable="false"
        android:ems="10"
        android:hint="종료일"
        android:textSize="12sp" >

        <requestFocus />
    </EditText>

</RelativeLayout>