<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="118dp"
        android:text="합계   :  "
        android:textSize="30dp" />

    <Button
        android:id="@+id/cashPay"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="110dp"
        android:background="@drawable/green"
        android:text="현금결제" />

    <Button
        android:id="@+id/cardPay"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/cashPay"
        android:layout_alignBottom="@+id/cashPay"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/cashPay"
        android:background="@drawable/blue"
        android:text="카드결제" />

    <TextView
        android:id="@+id/totalPayPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/cardPay"
        android:text="0원"
        android:textSize="30dp" />

</RelativeLayout>