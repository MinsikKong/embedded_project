<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/PurchaseManagementAddListTextView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="업체명" />

    <TextView
        android:id="@+id/PurchaseManagementAddListTextView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/PurchaseManagementAddListTextView1"
        android:text="상품명" />

    <TextView
        android:id="@+id/PurchaseManagementAddListTextView3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/PurchaseManagementAddListTextView2"
        android:text="수량" />

    <TextView
        android:id="@+id/PurchaseManagementAddListTextView4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/PurchaseManagementAddListTextView3"
        android:text="단가" />

    <TextView
        android:id="@+id/PurchaseManagementAddListTextView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/PurchaseManagementAddListTextView4"
        android:text="메모" />

    <EditText
        android:id="@+id/PurchaseManagementAddListEditText1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/PurchaseManagementAddListTextView1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/PurchaseManagementAddListTextView1"
        android:ems="10"
        android:hint=""
        android:lines="1"
        android:singleLine="true"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/PurchaseManagementAddListEditText2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/PurchaseManagementAddListTextView2"
        android:layout_alignTop="@+id/PurchaseManagementAddListTextView2"
        android:layout_toRightOf="@+id/PurchaseManagementAddListTextView2"
        android:ems="10"
        android:hint=""
        android:lines="1"
        android:singleLine="true"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/PurchaseManagementAddListEditText3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/PurchaseManagementAddListTextView3"
        android:layout_alignLeft="@+id/PurchaseManagementAddListEditText2"
        android:layout_below="@+id/PurchaseManagementAddListEditText2"
        android:ems="10"
        android:hint=""
        android:inputType="number"
        android:lines="1"
        android:singleLine="true"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/PurchaseManagementAddListEditText4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/PurchaseManagementAddListTextView4"
        android:layout_alignLeft="@+id/PurchaseManagementAddListEditText3"
        android:layout_alignTop="@+id/PurchaseManagementAddListTextView4"
        android:ems="10"
        android:hint=""
        android:inputType="number"
        android:lines="1"
        android:singleLine="true"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/PurchaseManagementAddListEditText5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/PurchaseManagementAddListTextView5"
        android:layout_below="@+id/PurchaseManagementAddListEditText4"
        android:layout_toRightOf="@+id/PurchaseManagementAddListTextView2"
        android:ems="10"
        android:hint=""
        android:lines="1"
        android:singleLine="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/PurchaseManagementAddListButton1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="확인" />

    <Button
        android:id="@+id/PurchaseManagementAddListButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/PurchaseManagementAddListButton1"
        android:text="취소" />

</RelativeLayout>